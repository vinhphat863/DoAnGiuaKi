@model IEnumerable<MobileShopConnection.SanPham>

@{
    ViewBag.Title = "Deleted";
    Layout = "~/Areas/Admin/Views/Shared/_AdminMainLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Sản Phẩm Đã Xóa
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i>  <a href="@Url.Action("Index","SanPham")">Sản Phẩm</a>
                </li>
                <li class="active">
                    <i class="fa fa-file"></i> Sản Phẩm Đã Xóa
                </li>
            </ol>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.MaSP)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TenSP)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MaHang)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MaLoai)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HinhAnh)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TinhTrang)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GiaBan)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SoLuong)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BiXoa)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaSP)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenSP)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaHang)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaLoai)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HinhAnh)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TinhTrang)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GiaBan)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SoLuong)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BiXoa)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id=item.MaSP }) |
                            @Html.ActionLink("Details", "Details", new { id=item.MaSP }) |
                            @Html.ActionLink("Restore", "Restore", new { id = item.MaSP })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
    <!-- /.row -->
</div>


