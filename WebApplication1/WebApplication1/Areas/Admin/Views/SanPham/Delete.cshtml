@model MobileShopConnection.SanPham

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminMainLayout.cshtml";
}
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Xóa Sản Phẩm
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i>  <a href="@Url.Action("Index","SanPham")">Sản Phẩm</a>
                </li>
                <li class="active">
                    <i class="fa fa-file"></i> Xóa Sản Phẩm
                </li>
            </ol>
            <h3>Are you sure you want to delete this?</h3>
            <div>
                <h4>SanPham</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        Mã
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MaSP)
                    </dd>

                    <dt>
                        Tên
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TenSP)
                    </dd>

                    <dt>
                        Mã Hãng
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MaHang)
                    </dd>

                    <dt>
                        Mã Loại
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MaLoai)
                    </dd>

                    <dt>
                        Hình Ảnh
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.HinhAnh)
                    </dd>

                    <dt>
                        Tình Trạng
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TinhTrang)
                    </dd>

                    <dt>
                        Giá Bán
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.GiaBan)
                    </dd>

                    <dt>
                        Số Lượng
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SoLuong)
                    </dd>

                    <dt>
                        Bị Xóa
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.BiXoa)
                    </dd>

                    <dt>
                        Chi Tiết
                    </dt>

                    <dd>
                        @Html.Raw(Model.ChiTiet);
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default" /> |
                        @Html.ActionLink("Quay Lại", "Index")
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- /.row -->
</div>

