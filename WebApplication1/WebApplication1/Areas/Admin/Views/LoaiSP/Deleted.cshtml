@model IEnumerable<MobileShopConnection.LoaiSP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminMainLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Loại Sản Phẩm Đã Xóa
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i>  <a href="@Url.Action("Index","LoaiSP")">Loại Sản Phẩm</a>
                </li>
                <li class="active">
                    <i class="fa fa-file"></i> Loại Sản Phẩm Đã Xóa
                </li>
            </ol>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <tr>
                        <th>
                            Mã Loại
                        </th>
                        <th>
                            Tên Loại
                        </th>
                        <th>
                            Bị Xóa
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaLoai)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenLoai)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BiXoa)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.MaLoai }) |
                                @Html.ActionLink("Restore", "Restore", new { id = item.MaLoai })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
        <!-- /.row -->
    </div>
</div>

