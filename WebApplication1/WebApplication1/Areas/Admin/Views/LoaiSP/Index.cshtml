@model PetaPoco.Page<MobileShopConnection.LoaiSP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminMainLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <p>
                @Html.ActionLink("Thêm", "Create")      |       
                @Html.ActionLink("Loại Sản Phẩm Đã Xóa", "Deleted")
            </p>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <tr>
                        <th>
                            Mã Loại
                        </th>
                        <th>
                            Tên Loại
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaLoai)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenLoai)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.MaLoai }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.MaLoai })
                            </td>
                        </tr>
                    }

                </table>
            </div>
            <div class="text-center">
                <ul class="pagination">
                    @{
                        if (Model.CurrentPage > 1)
                        {
                            <li>
                                <a href="@Url.Action("Index","SanPham",new { Page = Model.CurrentPage - 1})" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                        }
                    }
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        if (i == Model.CurrentPage)
                        {
                            <li class="active">@Html.ActionLink(i.ToString(), "Index", new { Page = i })</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink(i.ToString(), "Index", new { Page = i })</li>
                        }
                    }
                    @{
                        if (Model.CurrentPage < Model.TotalPages)
                        {
                            <li>
                                <a href="@Url.Action("Index","SanPham",new { Page = Model.CurrentPage + 1})" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    <!-- /.row -->
    </div>
</div>

